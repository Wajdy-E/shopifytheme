<style>
    .progress-icon {
        top: -9px;
        transform: translateX(-50%);
    }   

    .progress-icon svg {
        width: 14px;
        height: 14px;
    }

</style>
{% if settings.cart_goal > 0 %}
    <div id="shipping-goal" class="mb-8" data-cart-goal="{{ settings.cart_goal }}" data-cart-total="{{ cart.total_price | divided_by: 100.0 }}" aria-label="Progress: {{ cart.total_price | divided_by: 100.0 }}">
      <p id="cart-goal-reached?">
        Buy <span id="amount-to-free-shipping"></span> more to get <strong>Free Shipping</strong>
      </p>
      <div class="progress position-relative overflow-visible">
      <div id="progress-bar" class="progress-bar progress-bar-striped progress-bar-animated rounded-start" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
      <div id="progress-icon" class="progress-icon position-absolute rounded-circle p-3 border border-1 border-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="var(--bs-primary)" class="bi bi-star-fill" viewBox="0 0 16 16">
        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
      </svg>      
      </div>
    </div>
    </div>
  {% endif %}
  