{% comment %}
  Renders social icons.
  Accepts:
  - class: {String} a class to be added to the <ul> element (optional).

  Usage:
  {% render 'social-icons',
    class: 'my-class'
  %}
{% endcomment %}

{% if section.settings.show_social_icons or block.settings.show_social %}
    <ul class="list-unstyled d-flex gap-3{% if class %} {{ class}}{% endif %}" role="list">
        {%- if settings.social_facebook_link != blank -%}
            <li class="list-social-icon">
                <a href="{{ settings.social_facebook_link }}" class="link list-social__link">
                    {%- render 'facebook-icon' -%}
                    <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                </a>
        </li>
    {%- endif -%}
